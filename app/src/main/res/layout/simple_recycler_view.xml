<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/asl_card_bg"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/separator_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@drawable/separator_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/lightest_purple"
        android:id="@+id/recyclerView_main_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getRecyclerViewPos"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@+id/recyclerView_main_3"
        android:text="@string/asl_alpha_word_search"
        android:fontFamily="@font/antipasto_bold"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:background="@drawable/more_info_bg"

        />

</RelativeLayout>