<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordSearch"
    android:background="@color/green_seventh"
    >

    <TextView
        android:id="@+id/word_list_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/empire"
        android:text="@string/word_list_heading"
        android:textColor="@color/green_main"
        android:textSize="50sp" />


    <GridLayout
        android:id="@+id/word_list_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/word_list_heading"
        android:layout_centerHorizontal="true"
        android:columnCount="1"
        android:rowCount="4"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_rowWeight="1"
            android:elevation="100dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/word_list_1"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_rowWeight="1"
            android:elevation="100dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/word_list_2"
           />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_rowWeight="1"
            android:elevation="100dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/word_list_3"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_rowWeight="1"
            android:elevation="100dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/word_list_4"
            />
            

        <!--<androidx.appcompat.widget.AppCompatButton
            android:layout_rowWeight="1"
            android:text="@string/word_list_one" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_rowWeight="1"
            android:text="@string/word_list_two" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_rowWeight="1"
            android:text="@string/word_list_three" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_rowWeight="1"
            android:text="@string/word_list_four" />-->

    </GridLayout>
</RelativeLayout>